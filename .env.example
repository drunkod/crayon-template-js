# All variables need NEXT_PUBLIC_ prefix for client-side access

# --- Provider Selection ---
NEXT_PUBLIC_AI_PROVIDER="gemini"

# --- Google Gemini (Client-Side) ---
NEXT_PUBLIC_GEMINI_API_KEY="your_gemini_api_key_here"
NEXT_PUBLIC_GEMINI_MODEL="gemini-2.0-flash-exp"
NEXT_PUBLIC_GEMINI_TEMPERATURE="0.7"

# --- OpenRouter (Client-Side) ---
NEXT_PUBLIC_OPENROUTER_API_KEY="your_openrouter_api_key_here"
NEXT_PUBLIC_OPENROUTER_API_BASE="https://openrouter.ai/api/v1"
NEXT_PUBLIC_OPENROUTER_SITE_URL="http://localhost:4000"
NEXT_PUBLIC_OPENROUTER_MODEL="deepseek/deepseek-r1:free"

# --- Mock / Debug Settings ---
NEXT_PUBLIC_USE_MOCK_WEATHER="false"
NEXT_PUBLIC_USE_MOCK_AI="false"
NEXT_PUBLIC_DEBUG_MODE="true"
