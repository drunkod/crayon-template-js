# OpenRouter Configuration
OPENROUTER_API_KEY="your_openrouter_api_key_here"
OPENROUTER_API_BASE="https://openrouter.ai/api/v1"
OPENROUTER_SITE_URL="http://localhost:4000"
OPENROUTER_MODEL="deepseek/deepseek-r1:free"

# --- Provider Selection ---
# Which real AI provider to use when NOT in mock mode: "openrouter" or "gemini"
# Set both to "gemini" to use the native Google Gemini API.
AI_PROVIDER="gemini"
NEXT_PUBLIC_AI_PROVIDER="gemini"

# --- Google Gemini (Native API) ---
# Get your key from Google AI Studio: https://aistudio.google.com/app/apikey
GEMINI_API_KEY="your_gemini_api_key_here"
GEMINI_API_BASE="https://generativelanguage.googleapis.com/v1beta"
GEMINI_MODEL="gemini-2.0-flash-exp"


# --- Mock / Debug Settings ---

# Set to "true" to use mock data (no internet required)
NEXT_PUBLIC_USE_MOCK_WEATHER="false"

# Set to "true" to use mock OpenRouter (completely offline)
NEXT_PUBLIC_USE_MOCK_OPENROUTER="false"

# Set to "true" to enable verbose logging in the server console
NEXT_PUBLIC_DEBUG_MODE="true"
